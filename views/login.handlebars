<div id="forms" class="">
    <div id="login-form" class="login-form px-5 mb-10">
        <h2 class="page-title font-bold">Login</h2>
        <form class="space-y-4 mt-3 text-center">
            <div class="form-group">
                <label for="username">Username:</label>
                <input class="username-input form-input" type="text" id="username-login" />
            </div>
            <div class="form-group">
                <label for="password-login">Password:</label>
                <input class="form-input" type="password" id="password-login" />
            </div>
            <div class="form-group">
                <button class="login-buttons" id="login-form" type="submit">login</button>
            </div>
        </form>
    </div>
    <div id="signup-form" class="signup-form">
        <h2 class="page-title font-bold">Signup</h2>
        <form class="form signup">
            <div class="form-group">
                <label for="username-signup">Username:</label>
                <input class="form-input" type="text" id="username-signup" />
            </div>
            <div class="form-group">
                <label for="username-signup">email:</label>
                <input class="form-input" type="text" id="email-signup" />
            </div>
            <div class="form-group">
                <label for="password-signup">Password:</label>
                <input class="form-input" type="password" id="password-signup" />
            </div>
            <div class="form-group">
                <button class="login-buttons" id="signup-form" type="submit">signup</button>
            </div>
        </form>
    </div>
</div>

